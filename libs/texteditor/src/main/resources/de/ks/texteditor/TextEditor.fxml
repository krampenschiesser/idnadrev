<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>
<StackPane minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.60"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.ks.texteditor.TextEditor">
    <children>
        <SplitPane dividerPositions="0.5">
            <items>
                <StackPane>
                    <children>
                        <GridPane>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                                <ColumnConstraints hgrow="NEVER" minWidth="10.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="34.0" vgrow="NEVER"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <TextField fx:id="searchField" styleClass="bold" GridPane.columnIndex="1">
                                    <tooltip>
                                        <Tooltip text="%searchfield.info"/>
                                    </tooltip>
                                </TextField>
                                <HBox fx:id="actionBar" spacing="5.0"/>
                                <StackPane fx:id="editorContainer" style="-fx-background-color: white;"
                                           GridPane.columnSpan="2147483647" GridPane.rowIndex="1"/>
                            </children>
                        </GridPane>
                    </children>
                    <padding>
                        <Insets right="5.0"/>
                    </padding>
                </StackPane>
                <StackPane>
                    <children>
                        <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
                            <tabs>
                                <Tab fx:id="previewTab" closable="false" text="%preview">
                                    <content>
                                        <WebView fx:id="preview" prefHeight="200.0" prefWidth="200.0"/>
                                    </content>
                                </Tab>
                                <Tab fx:id="htmlTab" closable="false" text="%html">
                                    <content>
                                        <TextArea fx:id="htmlEditor" editable="false" prefHeight="200.0"
                                                  prefWidth="200.0"/>
                                    </content>
                                </Tab>
                            </tabs>
                        </TabPane>
                    </children>
                    <padding>
                        <Insets left="5.0"/>
                    </padding>
                </StackPane>
            </items>
            <StackPane.margin>
                <Insets/>
            </StackPane.margin>
        </SplitPane>
    </children>
</StackPane>

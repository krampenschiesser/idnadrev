<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Arc?>
<?import javafx.scene.shape.Circle?>
<StackPane id="StackPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
           prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2"
           fx:controller="de.ks.activity.OtherController">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="15.0"
              StackPane.alignment="TOP_CENTER">
            <children>
                <StackPane prefHeight="150.0" prefWidth="200.0">
                    <children>
                        <Arc fill="linear-gradient(from 0.0% 0.0% to 100.0% 100.0%, 0xffffffff 0.0%, 0x0000ffff 80.0%, 0x000000ff 100.0%)"
                             length="270.0" radiusX="100.0" radiusY="100.0" startAngle="45.0" stroke="BLACK"
                             strokeType="INSIDE" type="ROUND"/>
                        <Circle centerX="0.0" fill="WHITE" radius="11.0" stroke="BLACK" strokeType="INSIDE">
                            <StackPane.margin>
                                <Insets left="-40.0" top="-80.0"/>
                            </StackPane.margin>
                        </Circle>
                    </children>
                </StackPane>
                <Button fx:id="back" mnemonicParsing="false" text="Back!"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <StackPane.margin>
                <Insets/>
            </StackPane.margin>
        </VBox>
    </children>
</StackPane>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.ks.idnadrev.task.view.TaskFilter">
    <children>
        <GridPane hgap="5.0" vgap="5.0">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="10.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                <ColumnConstraints hgrow="NEVER" minWidth="10.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="NEVER"/>
                <RowConstraints minHeight="10.0" vgrow="NEVER"/>
                <RowConstraints minHeight="10.0" vgrow="NEVER"/>
            </rowConstraints>
            <children>
                <Label text="%title:"/>
                <TextField fx:id="title" GridPane.columnIndex="1"/>
                <Label text="%tags:" GridPane.columnIndex="2"/>
                <TextField fx:id="tags" GridPane.columnIndex="3"/>
                <Label text="%context:" GridPane.rowIndex="1"/>
                <ComboBox fx:id="context" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="%repository:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <StackPane GridPane.columnIndex="3" GridPane.rowIndex="1">
                    <children>
                        <fx:include StackPane.alignment="CENTER_LEFT"
                                    source="../../repository/ui/RepositorySelector.fxml" fx:id="repository"/>
                    </children>
                </StackPane>

                <Label text="%Task.state:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                <ComboBox fx:id="state" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </GridPane>
    </children>
</VBox>

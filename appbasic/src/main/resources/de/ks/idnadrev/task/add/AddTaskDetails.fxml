<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane hgap="5.0" vgap="5.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="de.ks.idnadrev.task.add.AddTaskDetails">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Label text="%delegation:"/>
        <TextField fx:id="delegation" GridPane.columnIndex="1"/>
        <HBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <children>
                <DatePicker fx:id="scheduledDate" showWeekNumbers="true"/>
                <StackPane>
                    <children>
                        <fx:include fx:id="scheduledTime" source="../../util/TimePicker.fxml"/>
                    </children>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                    <padding>
                        <Insets bottom="4.0"/>
                    </padding>
                </StackPane>
            </children>
        </HBox>
        <Label text="%scheduled:" GridPane.rowIndex="1"/>
        <Label text="%proposedWeek:" GridPane.rowIndex="2"/>
        <HBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <children>
                <DatePicker fx:id="proposedWeek" showWeekNumbers="true"/>
                <TextField fx:id="proposedWeekEditor" prefWidth="75.0"/>
                <ComboBox fx:id="dayOfWeek" prefWidth="150.0"/>
            </children>
        </HBox>
        <Label text="%proposedDay:" GridPane.rowIndex="3"/>
        <DatePicker fx:id="proposedDay" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    </children>
</GridPane>

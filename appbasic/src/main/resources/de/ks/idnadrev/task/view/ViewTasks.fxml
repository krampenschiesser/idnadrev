<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.*?>
<VBox fx:id="root" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.ks.idnadrev.task.view.ViewTasksController">
    <children>
        <StackPane>
            <children>
                <fx:include fx:id="crud" source="../../crud/CRUDView.fxml"/>
            </children>
        </StackPane>
        <SplitPane fx:id="split" dividerPositions="0.36" VBox.vgrow="ALWAYS">
            <items>
                <StackPane>
                    <children>
                        <fx:include fx:id="taskTable" source="TaskTable.fxml"/>
                    </children>
                </StackPane>
                <StackPane>
                    <children>
                        <fx:include fx:id="preview" source="../../adoc/view/AdocPreview.fxml"/>
                    </children>
                </StackPane>
            </items>
        </SplitPane>
    </children>
</VBox>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox fx:id="root" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.ks.idnadrev.task.add.AddTaskController">
    <children>
        <StackPane>
            <children>
                <fx:include fx:id="crud" source="../../crud/CRUDView.fxml"/>
            </children>
        </StackPane>
        <GridPane fx:id="editorGrid" hgap="5.0" vgap="5.0" VBox.vgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="NEVER" minWidth="10.0"/>
                <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="10.0" percentWidth="35.0"/>
                <ColumnConstraints halignment="LEFT" hgrow="NEVER" minWidth="10.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="25.0"/>
                <ColumnConstraints halignment="RIGHT" hgrow="NEVER" minWidth="10.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="NEVER"/>
                <RowConstraints minHeight="10.0" vgrow="NEVER"/>
                <RowConstraints minHeight="10.0" vgrow="NEVER"/>
                <RowConstraints minHeight="10.0" vgrow="NEVER"/>
                <RowConstraints minHeight="10.0" vgrow="ALWAYS"/>
            </rowConstraints>
            <children>
                <Label text="%title:"/>
                <TextField fx:id="title" GridPane.columnIndex="1"/>

                <Label text="%tags:" GridPane.columnIndex="2"/>
                <StackPane GridPane.columnIndex="3" GridPane.rowSpan="2">
                    <children>
                        <fx:include fx:id="tags" source="../../adoc/ui/TagSelection.fxml"/>
                    </children>
                </StackPane>

                <Label text="%repository:" GridPane.columnIndex="4"/>
                <StackPane maxWidth="1.7976931348623157E308" GridPane.columnIndex="5">
                    <children>
                        <fx:include fx:id="repository" source="../../repository/ui/ActiveRepositoryView.fxml"
                                    StackPane.alignment="CENTER_LEFT"/>
                    </children>
                </StackPane>

                <Label text="%context:" GridPane.rowIndex="1"/>
                <StackPane fx:id="contextContainer" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="%state:" GridPane.columnIndex="4" GridPane.rowIndex="2"/>
                <ComboBox fx:id="state" maxWidth="1.7976931348623157E308" GridPane.columnIndex="5"
                          GridPane.rowIndex="2"/>

                <Label text="%parent:" GridPane.rowIndex="2"/>
                <StackPane fx:id="parentContainer" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="%estimatedTime:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                <TextField fx:id="estimatedTime" GridPane.columnIndex="3" GridPane.rowIndex="2">
                    <tooltip>
                        <Tooltip text="%duration.in.min"/>
                    </tooltip>
                </TextField>

                <Accordion GridPane.columnSpan="2147483647" GridPane.rowIndex="3">
                    <panes>
                        <TitledPane animated="false" text="%more">
                            <content>
                                <StackPane>
                                    <children>
                                        <fx:include fx:id="details" source="AddTaskDetails.fxml"/>
                                    </children>
                                </StackPane>
                            </content>
                        </TitledPane>
                    </panes>
                </Accordion>
                <StackPane fx:id="editorContainer" GridPane.columnSpan="2147483647" GridPane.rowIndex="4"/>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </GridPane>
    </children>
</VBox>

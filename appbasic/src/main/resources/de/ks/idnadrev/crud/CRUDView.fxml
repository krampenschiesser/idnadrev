<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<GridPane fx:id="root" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="de.ks.idnadrev.crud.CRUDController">
    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" minWidth="10.0"/>
        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0"/>
        <ColumnConstraints hgrow="NEVER" minWidth="10.0"/>
        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0"/>
        <ColumnConstraints hgrow="NEVER" minWidth="10.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
        <RowConstraints vgrow="NEVER"/>
    </rowConstraints>
    <children>
        <Button fx:id="back" mnemonicParsing="false" text="%back">
            <graphic>
                <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../standbein/images/back.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="delete" mnemonicParsing="false" text="%delete" GridPane.columnIndex="4">
            <graphic>
                <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../standbein/images/delete.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <HBox fx:id="centerButtonContainer" spacing="10.0" GridPane.columnIndex="2">
            <children>
                <Button fx:id="save" defaultButton="true" mnemonicParsing="false" text="%save" visible="false"
                        HBox.hgrow="ALWAYS">
                    <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../standbein/images/save.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </HBox>
        <Separator GridPane.columnSpan="2147483647" GridPane.rowIndex="1">
            <padding>
                <Insets top="5.0"/>
            </padding>
        </Separator>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</GridPane>

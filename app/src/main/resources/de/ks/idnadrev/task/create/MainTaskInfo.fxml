<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<GridPane hgap="5.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity"
          minWidth="-Infinity" vgap="5.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="de.ks.idnadrev.task.create.MainTaskInfo">
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" hgrow="NEVER" minWidth="10.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" valignment="TOP" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" valignment="CENTER" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" valignment="CENTER" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" valignment="TOP" vgrow="ALWAYS"/>
        <RowConstraints minHeight="10.0" valignment="CENTER" vgrow="NEVER"/>
        <RowConstraints minHeight="30.0" valignment="TOP" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Label styleClass="title" stylesheets="@../../idnadrev.css" text="%task.create.main.title"
               GridPane.columnSpan="2147483647" GridPane.halignment="LEFT"/>
        <Separator prefWidth="200.0" GridPane.columnSpan="2147483647" GridPane.rowIndex="1">
            <effect>
                <DropShadow/>
            </effect>
        </Separator>

        <Label text="%name" GridPane.rowIndex="2"/>
        <TextField fx:id="name" GridPane.columnIndex="1" GridPane.columnSpan="2147483647" GridPane.rowIndex="2"/>

        <Label text="%is.project" GridPane.rowIndex="3"/>
        <CheckBox fx:id="project" mnemonicParsing="false" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="%task.parent.project" GridPane.rowIndex="4"/>
        <StackPane GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.valignment="TOP" GridPane.vgrow="NEVER">
            <children>
                <fx:include fx:id="parentProject" source="../../selection/NamedPersistentObjectSelection.fxml"/>
            </children>
        </StackPane>

        <Label text="%task.context" GridPane.rowIndex="5"/>
        <StackPane GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.valignment="TOP" GridPane.vgrow="NEVER">
            <children>
                <fx:include fx:id="context" source="../../selection/NamedPersistentObjectSelection.fxml"/>
            </children>
        </StackPane>

        <Label text="%task.state" GridPane.rowIndex="6"/>
        <ComboBox fx:id="state" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

        <Label text="%task.estimatedTime" GridPane.rowIndex="7"/>
        <TextField fx:id="estimatedTimeDuration" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

        <Label text="%description" GridPane.rowIndex="8"/>
        <StackPane fx:id="descriptionContainer" GridPane.columnIndex="1" GridPane.rowIndex="8"/>

        <Label text="%tags" GridPane.rowIndex="9"/>
        <StackPane GridPane.columnIndex="1" GridPane.rowIndex="9" GridPane.valignment="TOP" GridPane.vgrow="NEVER">
            <children>
                <fx:include fx:id="tagAdd" source="../../tag/TagContainer.fxml"/>
            </children>
        </StackPane>


    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</GridPane>

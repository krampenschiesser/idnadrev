<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<HBox spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.ks.idnadrev.task.view.ViewTasks">
    <children>
        <StackPane prefHeight="150.0" prefWidth="200.0">
            <children>
                <fx:include fx:id="view" source="ViewTasksMaster.fxml"/>
            </children>
        </StackPane>
        <GridPane hgap="10.0" vgap="5.0" HBox.hgrow="SOMETIMES">
            <columnConstraints>
                <ColumnConstraints halignment="LEFT" hgrow="NEVER" minWidth="10.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="25.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="25.0" prefHeight="30.0" vgrow="ALWAYS"/>
                <RowConstraints minHeight="25.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="25.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="25.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="25.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="25.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="25.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="25.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="25.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="25.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="25.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="%task.context" GridPane.rowIndex="2"/>
                <Label fx:id="name" styleClass="title" text="Label" GridPane.columnSpan="2147483647"/>
                <Label fx:id="context" styleClass="editorViewLabel" text="Label" GridPane.columnIndex="1"
                       GridPane.rowIndex="2"/>
                <Label text="%task.tags" GridPane.rowIndex="11"/>
                <FlowPane fx:id="tagPane" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="11"/>
                <StackPane fx:id="description" prefHeight="-1.0" prefWidth="-1.0" GridPane.columnSpan="2147483647"
                           GridPane.rowIndex="1"/>
                <Label text="%task.estimatedTime" GridPane.rowIndex="3"/>
                <Label text="%task.spendTime" GridPane.rowIndex="4"/>
                <Label fx:id="estimatedTime" styleClass="editorViewLabel" text="Label" GridPane.columnIndex="1"
                       GridPane.rowIndex="3"/>
                <GridPane GridPane.columnIndex="1" GridPane.rowIndex="4">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0"/>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Button fx:id="show" mnemonicParsing="false" onAction="#showTimeUnits"
                                text="%task.overview.showTimeUnits" GridPane.columnIndex="1"/>
                        <Label fx:id="spentTime" styleClass="editorViewLabel" text="Label"/>
                    </children>
                </GridPane>
                <Label text="%task.parent" GridPane.rowIndex="5"/>
                <Hyperlink fx:id="parentProject" graphicTextGap="0.0" onAction="#selectParentProject"
                           styleClass="editorViewLabel" text="Hyperlink" GridPane.columnIndex="1"
                           GridPane.rowIndex="5"/>
                <Label text="%task.physicalEffort" GridPane.rowIndex="8"/>
                <ProgressBar fx:id="physicalEffort" maxWidth="1.7976931348623157E308" progress="0.75"
                             GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="8"/>
                <Label text="%task.mentalEffort" GridPane.rowIndex="9"/>
                <Label text="%task.funFactor" GridPane.rowIndex="10"/>
                <ProgressBar fx:id="mentalEffort" maxWidth="1.7976931348623157E308" progress="0.75"
                             GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="9"/>
                <ProgressBar fx:id="funFactor" maxWidth="1.7976931348623157E308" progress="0.75"
                             GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="10"/>
                <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="12">
                    <children>
                        <Button fx:id="start" defaultButton="true" mnemonicParsing="false" onAction="#startWork"
                                text="%task.startwork" GridPane.columnIndex="1" GridPane.rowIndex="9"/>
                        <Button fx:id="finish" mnemonicParsing="false" onAction="#finishTask" text="%task.finish"/>
                        <Button fx:id="edit" mnemonicParsing="false" onAction="#editTask" text="%edit"/>
                        <Button fx:id="createSubtaskBtn" mnemonicParsing="false" onAction="#createSubtask"
                                text="%task.create.subtask"/>
                        <Button fx:id="delete" mnemonicParsing="false" onAction="#deleteTask" text="%delete"/>
                        <Button fx:id="later" mnemonicParsing="false" onAction="#scheduleLater" text="%later"/>
                        <Button fx:id="asap" mnemonicParsing="false" onAction="#scheduleAsap" text="%asap"/>
                    </children>
                </HBox>
                <Label text="%task.state" GridPane.rowIndex="6"/>
                <Label fx:id="state" styleClass="editorViewLabel" text="Label" GridPane.columnIndex="1"
                       GridPane.rowIndex="6"/>
            </children>
        </GridPane>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</HBox>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.*?>
<GridPane hgap="5.0" minHeight="150.0" minWidth="200.0" vgap="5.0" xmlns="http://javafx.com/javafx/8"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.ks.idnadrev.context.view.ViewContextController">
    <columnConstraints>
        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
    </rowConstraints>
    <children>
        <ListView fx:id="contextList" GridPane.columnSpan="2147483647"/>
        <HBox alignment="CENTER" spacing="10.0" GridPane.rowIndex="1">
            <children>
                <Button fx:id="create" mnemonicParsing="false" onAction="#onCreate" text="%create"/>
                <Button fx:id="edit" mnemonicParsing="false" onAction="#onEdit" text="%edit" GridPane.rowIndex="1"/>
                <Button fx:id="delete" mnemonicParsing="false" onAction="#onDelete" text="%delete"/>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</GridPane>

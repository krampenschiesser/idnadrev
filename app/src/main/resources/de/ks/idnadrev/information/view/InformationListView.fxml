<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane fx:id="root" hgap="5.0" minHeight="300.0" minWidth="400.0" vgap="5.0" xmlns="http://javafx.com/javafx/8.0.60"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.ks.idnadrev.information.view.InformationListView">
    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" minWidth="10.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Label text="%name:"/>
        <Label text="%tags:" GridPane.rowIndex="1"/>
        <TextField fx:id="nameSearch" GridPane.columnIndex="1"/>
        <StackPane GridPane.columnIndex="1" GridPane.rowIndex="1">
            <children>
                <fx:include fx:id="tagContainer" source="../../tag/TagContainer.fxml"/>
            </children>
        </StackPane>
        <TableView fx:id="informationList" GridPane.columnSpan="2147483647" GridPane.rowIndex="2">
            <columns>
                <TableColumn fx:id="nameColumn" minWidth="200.0" prefWidth="300.0" text="%name"/>
                <TableColumn fx:id="creationDateColumn" prefWidth="161.0" text="%creationDate"/>
            </columns>
        </TableView>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</GridPane>

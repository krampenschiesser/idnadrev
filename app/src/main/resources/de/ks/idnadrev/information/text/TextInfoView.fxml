<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.*?>
<GridPane hgap="5.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity"
          minWidth="-Infinity" vgap="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="de.ks.idnadrev.information.text.TextInfoController">
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" vgrow="ALWAYS"/>
        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
    </rowConstraints>
    <children>
        <TextField fx:id="name" styleClass="title" alignment="CENTER"/>
        <StackPane fx:id="adocContainer" GridPane.rowIndex="1"/>
        <Accordion GridPane.rowIndex="3">
            <panes>
                <TitledPane animated="false" style="-fx-font-size: 13px;" text="%files">
                    <content>
                        <StackPane>
                            <children>
                                <fx:include fx:id="files" source="../../../file/FileView.fxml"/>
                            </children>
                        </StackPane>
                    </content>
                </TitledPane>
            </panes>
        </Accordion>
        <StackPane GridPane.rowIndex="2">
            <children>
                <fx:include fx:id="tagContainer" source="../../tag/TagContainer.fxml"/>
            </children>
        </StackPane>
        <Button defaultButton="true" mnemonicParsing="false" text="%save" GridPane.halignment="CENTER"
                GridPane.rowIndex="4"/>
    </children>
</GridPane>

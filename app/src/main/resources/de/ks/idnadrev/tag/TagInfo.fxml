<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<GridPane fx:id="root" hgap="5.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
          vgap="5.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="de.ks.idnadrev.tag.TagInfo">
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" hgrow="NEVER" minWidth="10.0"/>
        <ColumnConstraints fillWidth="false" halignment="LEFT" hgrow="NEVER" minWidth="10.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
    </rowConstraints>
    <children>
        <Button fx:id="remove" mnemonicParsing="false" text="%removeTag" visible="false" GridPane.columnIndex="1"/>
        <Label id="TagInfo" fx:id="name" stylesheets="@../idnadrev.css" text="MyTag123"/>
    </children>
    <opaqueInsets>
        <Insets/>
    </opaqueInsets>
</GridPane>

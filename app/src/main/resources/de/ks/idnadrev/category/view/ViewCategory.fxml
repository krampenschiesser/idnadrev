          fx:controller="de.ks.idnadrev.category.view.ViewCategoryController">
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" hgrow="ALWAYS" minWidth="10.0" percentWidth="40.0"/>
        <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" minWidth="10.0" percentWidth="60.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="30.0" prefHeight="200.0" valignment="CENTER" vgrow="NEVER"/>

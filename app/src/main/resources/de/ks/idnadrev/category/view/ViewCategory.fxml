            <children>
                <Button fx:id="create" mnemonicParsing="false" onAction="#onCreate" text="%create"/>
                <Button fx:id="edit" mnemonicParsing="false" onAction="#onEdit" text="%edit"/>
                <Button fx:id="delete" mnemonicParsing="false" onAction="#onDelete" text="%delete"/>
            </children>
        </HBox>
        <StackPane fx:id="selectedItemContainer" GridPane.columnIndex="1"/>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>

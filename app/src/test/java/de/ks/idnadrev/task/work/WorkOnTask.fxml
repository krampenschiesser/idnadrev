<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>
<GridPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="de.ks.idnadrev.task.work.WorkOnTask">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <WebView fx:id="description" blendMode="DARKEN" focusTraversable="false" prefHeight="-1.0" prefWidth="-1.0"
                 GridPane.columnSpan="2147483647" GridPane.rowIndex="3"/>
        <Label text="%task.name" GridPane.columnSpan="2147483647"/>
        <Label text="%task.description" GridPane.columnSpan="2147483647" GridPane.rowIndex="2"/>
        <Label fx:id="name" text="Label" GridPane.columnSpan="2147483647" GridPane.rowIndex="1"/>
        <Button defaultButton="true" mnemonicParsing="false" text="%task.stop" GridPane.rowIndex="4"/>
        <Button mnemonicParsing="false" text="%task.finish" GridPane.columnIndex="3" GridPane.halignment="RIGHT"
                GridPane.rowIndex="4"/>
        <Button disable="true" mnemonicParsing="false" text="%task.addnote" GridPane.columnIndex="1"
                GridPane.rowIndex="4"/>
        <ProgressBar fx:id="estimatedTimeBar" maxWidth="1.7976931348623157E308" progress="0.0" GridPane.columnIndex="2"
                     GridPane.columnSpan="2147483647"/>
        <Label text="%task.estimatedTime" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <Label fx:id="estimatedTime" text="0:15" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
        <Label text="%task.overTime" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        <Label fx:id="overTime" text="0:00" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
    </children>
</GridPane>
